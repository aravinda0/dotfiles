[core]
	excludesfile = ~/.gitignore

[alias]
    co = checkout
    ci = commit
    st = status
    br = branch
    hist = log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short

[credential]
	helper = libsecret

[color]
	ui = auto

[pull]
  ff = only

[push]
	default = simple

[diff]
	tool = vimdiff

# Use seperate file for private info (username, email, etc.)
[include]
  path = ~/.gitconfig.local
[pull]
	ff = only
